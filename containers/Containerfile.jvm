ARG BASE_IMAGE=ghcr.io/doctorjei/clodbox-base:latest
FROM $BASE_IMAGE

USER root

# Java (OpenJDK + build tools)
RUN apt-get update && apt-get install -y --no-install-recommends \
    default-jdk \
    kotlin \
    maven \
    && rm -rf /var/lib/apt/lists/*

USER agent
WORKDIR /home/agent/workspace
